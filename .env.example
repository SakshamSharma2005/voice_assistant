# API Configuration
API_VERSION=v1
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Credentials (for Speech-to-Text and Text-to-Speech)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCP_PROJECT_ID=your_gcp_project_id

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=scheme_navigator
POSTGRES_URL=postgresql://user:password@localhost:5432/schemes_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Session Configuration
SESSION_EXPIRE_MINUTES=30
MAX_SESSIONS_PER_USER=5

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Audio Configuration
MAX_AUDIO_FILE_SIZE_MB=10
SUPPORTED_AUDIO_FORMATS=wav,mp3,webm,ogg
AUDIO_OUTPUT_FORMAT=mp3
TTS_SPEECH_RATE=1.0
TTS_PITCH=0.0

# Storage Configuration
AUDIO_STORAGE_PATH=./storage/audio
TEMP_AUDIO_PATH=./storage/temp
AUDIO_RETENTION_HOURS=24

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
